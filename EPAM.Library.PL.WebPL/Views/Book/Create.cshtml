@using EPAM.Library.PL.WebPL.ViewModels.AuthorVM
@model EPAM.Library.PL.WebPL.ViewModels.Book.CreateBookVM
@{
    ViewData["Title"] = "Create a book";
}

<div>
    <form asp-controller="Book" asp-action="Create" method="post" id="formCreate">
        <div class="form-group pt-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create new book</h2>
                <hr />
            </div>
            <div class="row mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="City"></label>
                <input asp-for="City" />
                <span asp-validation-for="City" class="alert-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Publisher"></label>
                <input asp-for="Publisher" />
                <span asp-validation-for="Publisher" class="alert-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="PublicationYear"></label>
                <input asp-for="PublicationYear" />
                <span asp-validation-for="PublicationYear" class="alert-danger"></span>
            </div>
            <div class="row mb-3">
                <label asp-for="Pages"></label>
                <input asp-for="Pages" />
                <span asp-validation-for="Pages" class="alert-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN"/>
            <span asp-validation-for="ISBN" class="alert-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description">
                desc
            </textarea>
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>
        <div class="row mb-3">
            <button type="submit" class="btn btn-primary" style="width:150px">
                Create
            </button>
            <a class="btn btn-warning" style="width:150px" asp-controller="Book" asp-action="Index">
                Go back to list
            </a>
        </div>
    </form>
    <div class="row mb-3">
        <div class="col">
            <span asp-validation-for="Authors" class="alert-danger"></span>
            @await Component.InvokeAsync("AuthorsList")
        </div>
        <div class="col">
            @{
                Html.RenderPartial("~/Views/Author/_CreateAuthorFromBook.cshtml");
            }
        </div>
    </div>
</div>
